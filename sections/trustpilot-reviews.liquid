    },
    {
      "type": "select",
      "id": "cards_color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Achtergrond 1"
        },
        {
          "value": "background-2",
          "label": "Achtergrond 2"
        },
        {
          "value": "inverse",
          "label": "Omgekeerd"
        },
        {
          "value": "custom",
          "label": "Aangepast"
        }
      ],
      "default": "background-2",
      "label": "Kleurschema kaarten",
      "info": "Aangepast kleurschema wordt onderaan de sectie-instellingen bewerkt."
